generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model fonction {
  id          Int         @id
  designation String      @db.VarChar(30)
  personnel   personnel[]
}

model permission {
  id          Int         @id
  code        String      @db.VarChar(30)
  description String      @db.VarChar(30)
  personnel   personnel[]
}

model personnel {
  id            Int        @id @default(autoincrement())
  nom           String     @db.VarChar(30)
  postnom       String     @db.VarChar(30)
  prenom        String     @db.VarChar(30)
  sexe          String     @db.Char(1)
  dateNaissance DateTime   @db.Date
  abandon       Boolean    @default(false)
  telephone     String     @db.VarChar(15)
  motDePasse    String     @default("1234") @db.VarChar(30)
  idFonction    Int
  idPermission  Int
  fonction      fonction   @relation(fields: [idFonction], references: [id], onUpdate: Restrict, map: "Personnel_idFonction_Fonction_id")
  permission    permission @relation(fields: [idPermission], references: [id], onUpdate: Restrict, map: "Personnel_idPermission_Permission_id")

  @@index([idFonction], map: "Personnel_idFonction_Fonction_id")
  @@index([idPermission], map: "Personnel_idPermission_Permission_id")
}
